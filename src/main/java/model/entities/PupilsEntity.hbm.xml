<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="model.entities.PupilsEntity" table="pupils" schema="programming_tutorial">
        <id name="id">
            <column name="id" sql-type="int(11)"/>
        </id>
        <property name="userId">
            <column name="user_id" sql-type="int(11)"/>
        </property>
        <property name="clazz">
            <column name="class" sql-type="int(11)"/>
        </property>
        <property name="teacher">
            <column name="teacher" sql-type="int(11)"/>
        </property>
        <property name="schoolId">
            <column name="school_id" sql-type="int(11)" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>