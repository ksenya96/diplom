<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="model.entities.UsersEntity" table="users" schema="programming_tutorial">
        <id name="id">
            <column name="id" sql-type="int(11)"/>
        </id>
        <property name="login">
            <column name="login" sql-type="varchar(255)"/>
        </property>
        <property name="password">
            <column name="password" sql-type="varchar(255)"/>
        </property>
        <property name="access">
            <column name="access" sql-type="int(11)"/>
        </property>
        <property name="firstName">
            <column name="first_name" sql-type="varchar(255)"/>
        </property>
        <property name="lastName">
            <column name="last_name" sql-type="varchar(255)"/>
        </property>
        <property name="patronymic">
            <column name="patronymic" sql-type="varchar(255)" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>